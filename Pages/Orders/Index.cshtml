@page
@model e_book_pvt.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>My Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].ContactNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Items)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderDetail) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Items)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
