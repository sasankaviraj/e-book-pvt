@page
@model e_book_pvt.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>OrderDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderDetail.ID" />
            <div class="form-group">
                <label asp-for="OrderDetail.FirstName" class="control-label"></label>
                <input asp-for="OrderDetail.FirstName" class="form-control" />
                <span asp-validation-for="OrderDetail.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetail.LastName" class="control-label"></label>
                <input asp-for="OrderDetail.LastName" class="form-control" />
                <span asp-validation-for="OrderDetail.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetail.Address" class="control-label"></label>
                <input asp-for="OrderDetail.Address" class="form-control" />
                <span asp-validation-for="OrderDetail.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetail.ContactNo" class="control-label"></label>
                <input asp-for="OrderDetail.ContactNo" class="form-control" />
                <span asp-validation-for="OrderDetail.ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetail.Items" class="control-label"></label>
                <input asp-for="OrderDetail.Items" class="form-control" />
                <span asp-validation-for="OrderDetail.Items" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetail.TotalPrice" class="control-label"></label>
                <input asp-for="OrderDetail.TotalPrice" class="form-control" />
                <span asp-validation-for="OrderDetail.TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetail.UserID" class="control-label"></label>
                <input asp-for="OrderDetail.UserID" class="form-control" />
                <span asp-validation-for="OrderDetail.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetail.OrderDate" class="control-label"></label>
                <input asp-for="OrderDetail.OrderDate" class="form-control" />
                <span asp-validation-for="OrderDetail.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetail.IsDelivered" class="control-label"></label>
                <select asp-for="OrderDetail.IsDelivered" class="form-control">
                    <option value="false">Not Delivered</option>
                    <option value="true">Delivered</option>
                </select>
                <span asp-validation-for="OrderDetail.IsDelivered" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
